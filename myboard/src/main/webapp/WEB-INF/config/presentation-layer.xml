<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/login.do">login</prop>
				<prop key="/getBoardList.do">getBoardList</prop>
				<prop key="/getBoard.do">getBoard</prop>
				<prop key="/insertBoard.do">insertBoard</prop>
				<prop key="/updateBoard.do">updateBoard</prop>
				<prop key="/deleteBoard.do">deleteBoard</prop>
				<prop key="/logout.do">logout</prop>
			</props>
		</property>
	</bean>
	<bean id="login" class="sen.spring.web.user.LoginController"/>
	<bean id="getBoardList" class="sen.spring.web.board.GetBoardListController"/>
	<bean id="getBoard" class="sen.spring.web.board.GetBoardController"/>
	<bean id="insertBoard" class="sen.spring.web.board.InsertBoardController"/>
	<bean id="updateBoard" class="sen.spring.web.board.UpdateBoardController"/>
	<bean id="deleteBoard" class="sen.spring.web.board.DeleteBoardController"/>
	<bean id ="logout" class="sen.spring.web.user.LogoutController"/>
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/board/"/>
		<property name="suffix" value=".jsp"/>	
	</bean>
</beans>
